upstream backend {
	server unix:/run/php/php7.4-fpm.sock weight=4;
	server unix:/run/php/php7.3-fpm.sock weight=2;
	server unix:/run/php/php7.2-fpm.sock;
}

server {
	listen 80;
	listen [::]:80;
	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	root /usr/share/iqrf-gateway-webapp/www;
	index index.php index.html index.htm index.nginx-debian.html;

	# Logging
	access_log  /var/log/nginx/iqrf-gateway-webapp.access.log;
	error_log  /var/log/nginx/iqrf-gateway-webapp.error.log;

	server_name _;

	absolute_redirect off;

	location ~ ^/system/api/(.*)$ {
		proxy_redirect ~^(.*)$ $scheme://$http_host/system$1;
		try_files $uri $uri/ /index.php?$args;
	}

	location /system {
		alias /usr/share/iqrf-gateway-webapp/www/dist;
		try_files $uri $uri/ /index.html;
	}

	location /ws {
		proxy_pass http://localhost:1338;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_set_header Host "localhost";
		proxy_http_version 1.1;
	}

	location /wsMonitor {
		proxy_pass http://localhost:1438;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_set_header Host "localhost";
		proxy_http_version 1.1;
	}

	location ^~ /node-red/ {
		rewrite ^/node-red/(.*) /$1 break;
		include /etc/nginx/proxy_params;
		proxy_http_version 1.1;
		proxy_pass http://127.0.0.1:1880/;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_redirect ~^(.*)$ $scheme://$http_host/node-red$1;
		sub_filter "http://$server_name/" "$scheme://$http_host/node-red/";
		sub_filter_once off;
	}

	location ^~ /grafana/ {
		rewrite ^/grafana/(.*) /$1 break;
		include /etc/nginx/proxy_params;
		proxy_http_version 1.1;
		proxy_pass http://localhost:3000/;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		sub_filter "http://$server_name/" "$scheme://$http_host/grafana/";
		sub_filter_once off;
	}

	location ^~ /dashboard/ {
		rewrite ^/dashboard/(.*) /$1 break;
		include /etc/nginx/proxy_params;
		proxy_http_version 1.1;
		proxy_pass http://localhost:3000/;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		sub_filter "http://$server_name/" "$scheme://$http_host/dashboard/";
		sub_filter_once off;
	}

	location / {
		rewrite ^/(.*) /ui/$1 break;
		include /etc/nginx/proxy_params;
		proxy_http_version 1.1;
		proxy_pass http://127.0.0.1:1880/;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_redirect ~^/(.*)$ $scheme://$http_host/$1;
		sub_filter "http://$server_name/ui/" "$scheme://$http_host/";
		sub_filter_once off;
	}

	location ~ /\. {
		access_log off;
		log_not_found off;
		deny all;
	}

	location ~ [^/]\.(php|phtml)(/|$) {
		fastcgi_split_path_info ^(.+?\.php)(/.*)$;
		if (!-f $document_root$fastcgi_script_name) {
			return 404;
		}

		include fastcgi_params;
		# Mitigate https://httpoxy.org/ vulnerabilities
		fastcgi_param HTTP_PROXY "";

		fastcgi_param REQUEST_METHOD $request_method;
		fastcgi_param BASE_URI "/system/";
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_pass backend;
		fastcgi_index index.php;
	}

	add_header Referrer-Policy "same-origin" always;
	add_header X-Content-Type-Options "nosniff" always;
	add_header X-Xss-Protection "1; mode=block" always;
	server_tokens off;

	ssl_certificate /etc/iqrf-gateway-webapp/certs/cert.pem;
	ssl_certificate_key /etc/iqrf-gateway-webapp/certs/privkey.pem;
}
