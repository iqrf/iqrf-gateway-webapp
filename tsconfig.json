{
	"compilerOptions": {
		"allowJs": false,
		"composite": true,
		"declaration": true,
		"declarationDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ES2020"
	},
	"exclude": [
		"docs",
		"dist",
		"node_modules"
	],
	"references": [
		{
			"path": "./packages/api-client/"
		},
		{
			"path": "./packages/frontend/"
		}
	]
}
