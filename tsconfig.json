{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2020",
		"strict": true,
		"module": "ES2020",
		"moduleResolution": "Bundler",
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"types": [
			"jest",
			"node",
			"vuex/types/vue.d.ts"
		],
		"lib": ["ES2020", "DOM"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": ["cypress", "cypress.config.ts"]
}
