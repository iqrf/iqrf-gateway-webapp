{
	"compilerOptions": {
		"target": "ES5",
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"types": ["jest"],
		"lib": ["ES2020", "DOM"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": [
		"cypress",
		"cypress.config.ts",
		"node_modules"
	]
}
