{
	"compilerOptions": {
		"target": "es5",
		"strict": true,
		"module": "es2020",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"types": ["jest", "node"],
		"lib": ["ES2020", "DOM"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": ["cypress/", "cypress.config.ts"]
}
