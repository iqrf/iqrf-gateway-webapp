{
	"compilerOptions": {
		"allowJs": false,
		"composite": true,
		"declaration": true,
		"declarationDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ES2020"
	},
	"include": [
		"src/**/*",
		"package.json"
	],
	"exclude": [
		"dist",
		"docs",
		"node_modules",
		"jest.config.ts",
		"typedoc.config.js"
	],
	"ts-node": {
		"moduleTypes": {
			"jest.config.ts": "commonjs",
			"typedoc.config.ts": "commonjs"
		}
	}
}
