{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@/*": ["src/*"],
			"@iqrf/iqrf-gateway-webapp-client": ["../api-client/src"],
			"@iqrf/iqrf-gateway-webapp-client/*": ["../api-client/src/*"],
			"@iqrf/iqrf-gateway-daemon-utils": ["../daemon-utils/src"],
			"@iqrf/iqrf-gateway-daemon-utils/*": ["../daemon-utils/src/*"]
		}
	},
	"types": [
		"vue3-toastify/global",
		"vite-plugin-vue-layouts/client",
		"vite-plugin-pages/client"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue",
		".eslintrc.cjs",
		"vite.config.ts",
		"vue-i18n-extract.config.js"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
