{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./",
		"declarationDir": "./dist",
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"@iqrf/iqrf-gateway-webapp-client": [
				"../api-client"
			],
			"@/*": [
				"src/*"
			]
		},
		"rootDir": "./",
		"useDefineForClassFields": true
	},
	"types": [
		"vue3-toastify/global",
		"vite-plugin-vue-layouts-next/client"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue",
		"shims.d.ts",
		"vite.config.ts",
		"vitest.config.ts"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
