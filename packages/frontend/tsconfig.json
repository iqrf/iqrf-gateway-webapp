{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./",
		"declarationDir": "./dist",
		"experimentalDecorators": true,
		"lib": [
			"DOM",
			"ESNext"
		],
		"noEmit": true,
		"noImplicitAny": false,
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@iqrf/iqrf-gateway-webapp-client": [
				"../api-client/src"
			],
			"@iqrf/iqrf-gateway-webapp-client/*": [
				"../api-client/src/*"
			]
		},
		"rootDir": "./"
	},
	"exclude": [
		"cypress",
		"cypress.config.ts"
	]
}
