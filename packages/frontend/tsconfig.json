{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./",
		"declarationDir": "./dist",
		"experimentalDecorators": true,
		"lib": [
			"DOM",
			"ESNext"
		],
		"noEmit": true,
		"noImplicitAny": false,
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"rootDir": "./"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue",
		"vite.config.mts"
	],
	"exclude": [
		"cypress",
		"cypress.config.ts",
		"dist",
		"node_modules"
	]
}
