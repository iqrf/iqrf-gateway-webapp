{
	"compilerOptions": {
		"rootDir": "./",
		"target": "ES2020",
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"lib": ["ES2020", "DOM"],
		"paths": {
			"@/*": ["./src/*"],
			"@iqrf/iqrf-gateway-webapp-client": ["../api-client/src"],
			"@iqrf/iqrf-gateway-webapp-client/*": ["../api-client/src/*"]
		}
	},
	"exclude": [
		"cypress",
		"cypress.config.ts"
	]
}
