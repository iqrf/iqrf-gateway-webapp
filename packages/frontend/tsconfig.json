{
	"compilerOptions": {
		"rootDir": "./",
		"target": "ES2020",
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"lib": ["ES2020", "DOM"],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": [
		"cypress",
		"cypress.config.ts"
	]
}
