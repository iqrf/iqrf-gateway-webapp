{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"allowJs": false,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [
			"ESNext"
		],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmitOnError": true,
		"paths": {
			"@iqrf/iqrf-gateway-webapp": [
				"./packages/frontend"
			],
			"@iqrf/iqrf-gateway-webapp-client": [
				"./packages/api-client"
			]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "ESNext"
	}
}
