{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/iqrf-gateway-webapp-api/schemas/jwt.json",
	"type": "object",
	"title": "JWT + user info",
	"additionalProperties": false,
	"required": [
		"id",
		"username",
		"email",
		"language",
		"role",
		"state",
		"token"
	],
	"properties": {
		"id": {
			"$id": "#/properties/id",
			"type": "integer",
			"title": "User ID",
			"example": 1
		},
		"username": {
			"$id": "#/properties/username",
			"type": "string",
			"title": "Username",
			"example": "iqrf"
		},
		"email": {
			"$id": "#/properties/email",
			"oneOf": [
				{
					"type": "string",
					"format": "email"
				},
				{
					"type": "null"
				}
			],
			"title": "Email",
			"example": "iqrf@example.org"
		},
		"language": {
			"$id": "#/properties/language",
			"type": "string",
			"title": "Language",
			"enum": [
				"cs",
				"en"
			],
			"default": "en",
			"example": "en"
		},
		"role": {
			"$id": "#/properties/role",
			"type": "string",
			"title": "Role",
			"enum": [
				"admin",
				"normal",
				"basicadmin",
				"basic"
			],
			"default": "normal",
			"example": "normal"
		},
		"state": {
			"$id": "#/properties/state",
			"type": "string",
			"title": "Account state",
			"enum": [
				"unverified",
				"verified"
			],
			"example": "verified"
		},
		"token": {
			"$id": "#/properties/token",
			"type": "string",
			"pattern": "^[A-Za-z0-9-_=]+\\.[A-Za-z0-9-_=]+\\.?[A-Za-z0-9-_.+/=]*$",
			"title": "JSON Web Token",
			"example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJub25lIn0.eyJpc3MiOiJBU1VTLUI4NS1QUk8tR0FNRVIiLCJqdGkiOiJBU1VTLUI4NS1QUk8tR0FNRVIiLCJpYXQiOiIxNTg3MjE2NjMzLjQ2NDEzNyIsImV4cCI6IjE1ODczMDMwMzMuNDY0MTM3IiwidWlkIjoxfQ."
		}
	}
}
