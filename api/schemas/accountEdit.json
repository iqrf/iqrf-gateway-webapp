{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/openapi/iqrf-gateway-webapp/schemas/accountEdit.json",
	"type": "object",
	"title": "Update user account information",
	"additionalProperties": false,
	"properties": {
		"baseUrl": {
			"$id": "#/properties/baseUrl",
			"type": "string",
			"title": "Frontend base URL",
			"example": "https://iqaros.local/system/"
		},
		"username": {
			"$id": "#/properties/username",
			"type": "string",
			"title": "Username",
			"minLength": 1,
			"example": "iqrf"
		},
		"email": {
			"$id": "#/properties/email",
			"oneOf": [
				{
					"type": "string",
					"format": "idn-email"
				},
				{
					"type": "null"
				}
			],
			"title": "Email",
			"example": "iqrf@example.org"
		},
		"language": {
			"$id": "#/properties/language",
			"type": "string",
			"title": "Language",
			"enum": [
				"cs",
				"en"
			],
			"example": "en"
		}
	}
}
