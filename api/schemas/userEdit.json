{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/iqrf-gateway-webapp-api/schemas/userEdit.json",
	"type": "object",
	"title": "User Edit",
	"additionalProperties": false,
	"properties": {
		"username": {
			"$id": "#/properties/username",
			"type": "string",
			"title": "Username",
			"minLength": 1,
			"example": "iqrf"
		},
		"email": {
			"$id": "#/properties/email",
			"oneOf": [
				{
					"type": "string",
					"format": "idn-email"
				},
				{
					"type": "null"
				}
			],
			"title": "Email",
			"example": "iqrf@example.org"
		},
		"language": {
			"$id": "#/properties/language",
			"type": "string",
			"title": "Language",
			"enum": [
				"en"
			],
			"example": "en"
		},
		"role": {
			"$id": "#/properties/role",
			"type": "string",
			"title": "Role",
			"enum": [
				"normal",
				"power"
			],
			"example": "power"
		}
	}
}
