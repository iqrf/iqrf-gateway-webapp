{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/openapi/iqrf-gateway-webapp/schemas/definitions/wireGuard.json",
	"definitions": {
		"ipv4": {
			"$id": "#/definitions/ipv4",
			"type": "object",
			"title": "IPv4 configuration",
			"examples": [
				{
					"id": 1,
					"address": "10.0.0.0",
					"prefix": 24
				}
			],
			"required": [
				"address",
				"prefix"
			],
			"additionalProperties": false,
			"properties": {
				"id": {
					"$ref": "https://apidocs.iqrf.org/openapi/iqrf-gateway-webapp/schemas/definitions/common.json#/definitions/id"
				},
				"address": {
					"$id": "#/definitions/ipv4/properties/address",
					"title": "WireGuard interface IPv4 address",
					"type": "string",
					"format": "ipv4",
					"example": "10.0.0.35"
				},
				"prefix": {
					"$id": "#/definitions/ipv4/properties/prefix",
					"title": "WireGuard interface IPv4 address prefix",
					"type": "integer",
					"minimum": 0,
					"maximum": 32,
					"example": 24
				}
			}
		},
		"ipv6": {
			"$id": "#/definitions/ipv6",
			"type": "object",
			"title": "IPv6 configuration",
			"examples": [
				{
					"id": 1,
					"address": "fd86:ea04:1115::35",
					"prefix": 64
				}
			],
			"required": [
				"address",
				"prefix"
			],
			"additionalProperties": false,
			"properties": {
				"id": {
					"$ref": "https://apidocs.iqrf.org/openapi/iqrf-gateway-webapp/schemas/definitions/common.json#/definitions/id"
				},
				"address": {
					"$id": "#/definitions/ipv6/properties/address",
					"title": "WireGuard interface IPv6 address",
					"type": "string",
					"format": "ipv6",
					"example": "fd86:ea04:1115::35"
				},
				"prefix": {
					"$id": "#/definitions/ipv6/properties/prefix",
					"title": "WireGuard interface IPv6 address prefix",
					"type": "integer",
					"minimum": 0,
					"maximum": 128,
					"example": 64
				}
			}
		},
		"privateKey": {
			"$id": "#/definitions/privateKey",
			"type": "string",
			"title": "WireGuard private key",
			"example": "+DsMmGWks1DawE1yc4UlOI6pbH3XVxdVArj9lLOyD18="
		},
		"publicKey": {
			"$id": "#/definitions/publicKey",
			"type": "string",
			"title": "WireGuard public key",
			"example": "2OGuuIWQLKvtVYGntdHSoRb8MtDyKq6wxKd9vQphzDQ="
		},
		"name": {
			"$id": "#/definitions/name",
			"title": "WireGuard tunnel/interface name",
			"type": "string",
			"description": "WireGuard interface is also used as WireGuard tunnel identifier",
			"example": "wg0"
		},
		"port": {
			"$id": "#/definitions/port",
			"title": "WireGuard interface listen port",
			"type": "integer",
			"minimum": 0,
			"maximum": 65535,
			"example": 58775
		}
	}
}
