{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/iqrf-gateway-webapp-api/schemas/dateTime.json",
	"type": "object",
	"title": "Date and time",
	"required": [
		"dateTime",
		"timezone"
	],
	"additionalProperties": false,
	"properties": {
		"dateTime": {
			"$id": "#/properties/dateTime",
			"type": "object",
			"title": "Date and time",
			"requred": [
				"date",
				"time"
			],
			"additionalProperties": false,
			"properties": {
				"date": {
					"$id": "#/properties/dateTime/properties/date",
					"type": "string",
					"title": "Date",
					"example": "01 January 2021"
				},
				"time": {
					"$id": "#/properties/dateTime/properties/time",
					"type": "string",
					"title": "Time",
					"example": "12:00"
				}
			}
		},
		"timezone": {
			"$id": "#/properties/timezone",
			"type": "object",
			"title": "Timezone",
			"required": [
				"name",
				"code",
				"offset"
			],
			"additionalProperties": false,
			"properties": {
				"name": {
					"$id": "#/properties/timezone/properties/name",
					"type": "string",
					"title": "Timezone name",
					"example": "Europe/Prague"
				},
				"code": {
					"$id": "#/properties/timezone/properties/code",
					"type": "string",
					"title": "Timezone code",
					"example": "CET"
				},
				"offset": {
					"$id": "#/properties/timezone/properties/offset",
					"type": "string",
					"title": "Timezone offset",
					"example": "+0100"
				}
			}
		}
	}
}
