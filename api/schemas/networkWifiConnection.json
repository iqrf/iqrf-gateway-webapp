{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/iqrf-gateway-webapp-api/schemas/networkWifiConnection.json",
	"type": "object",
	"title": "Connect to Wifi access point",
	"required": [
		"ssid",
		"interface",
		"security"
	],
	"additionalProperties": false,
	"properties": {
		"ssid": {
			"$id": "#/properties/ssid",
			"type": "string",
			"title": "SSID",
			"example": "My network"
		},
		"interface": {
			"$id": "#/properties/interface",
			"type": "string",
			"title": "Interface name",
			"example": "wlan0"
		},
		"security": {
			"$id": "#/properties/security",
			"type": "string",
			"title": "Access point security information",
			"required": [
				"type"
			],
			"additionalProperties": false,
			"properties": {
				"type": {
					"$id": "#/properties/security/properties/type",
					"type": "string",
					"title": "Security type",
					"example": "wpa-psk",
					"enum": [
						"wpa-psk"
					]
				},
				"psk": {
					"$id": "#/properties/security/properties/psk",
					"type": "string",
					"title": "Pre-shared key",
					"example": "Password"
				}
			},
			"allOf": [
				{
					"if": {
						"properties": {
							"type": {
								"const": "wpa-psk"
							}
						}
					},
					"then": {
						"required": [
							"type",
							"password"
						]
					}
				}
			]
		}
	}
}
