{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/openapi/iqrf-gateway-webapp/schemas/hostname.json",
	"type": "object",
	"title": "Hostnamectl configuration",
	"additionalProperties": false,
	"required": [
		"hostname"
	],
	"properties": {
		"hostname": {
			"$id": "#/properties/hostname",
			"title": "Hostname",
			"type": "string",
			"pattern": "^[a-zA-Z0-9][a-zA-Z0-9\\-]{0,63}$",
			"example": "my-hostname"
		}
	}
}
