{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/iqrf-gateway-webapp-api/schemas/systemdLog.json",
	"type": "object",
	"title": "Systemd log configuration",
	"example": {
		"enabled": false
	},
	"required": [
		"ForwardToSyslog",
		"Storage",
		"MaxFileSec",
		"SystemMaxFiles",
		"SystemMaxFileSize",
		"SystemMaxUse"
	],
	"additionalProperties": false,
	"properties": {
		"ForwardToSyslog": {
			"$id": "#/properties/ForwardToSyslog",
			"title": "Forward journal logs to syslog",
			"type": "boolean",
			"example": false
		},
		"Storage": {
			"$id": "#/properties/Storage",
			"title": "Log storage method",
			"type": "string",
			"enum": [
				"persistent",
				"volatile"
			],
			"example": "volatile"
		},
		"MaxFileSec": {
			"$id": "#/properties/MaxFileSec",
			"type": "object",
			"title": "Time-based log rotation",
			"required": [
				"count",
				"unit"
			],
			"additionalProperties": false,
			"properties": {
				"unit": {
					"$id": "#/properties/MaxFileSec/properties/unit",
					"title": "Time unit",
					"type": "string",
					"enum": [
						"s",
						"m",
						"h",
						"day",
						"week",
						"month",
						"year"
					],
					"example": "week"
				},
				"count": {
					"$id": "#/properties/MaxFileSec/properties/count",
					"title": "Unit count",
					"type": "integer",
					"minimum": 0,
					"example": 1
				}
			}
		},
		"SystemMaxFiles": {
			"$id": "#/properties/SystemMaxFiles",
			"title": "Number of log files to keep",
			"type": "integer",
			"min": 0,
			"example": 5
		},
		"SystemMaxFileSize": {
			"$id": "#/properties/SystemMaxFileSize",
			"title": "Maximum log file size in MB",
			"description": "Setting 0 uses the service default (1/8 of SystemMaxUse)",
			"type": "integer",
			"min": 0,
			"example": 0
		},
		"SystemMaxUse": {
			"$id": "#/properties/SystemMaxUse",
			"title": "Maximum disk space in MB that journal can use",
			"type": "integer",
			"min": 0,
			"example": 64
		}
	}
}
