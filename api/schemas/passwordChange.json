{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/openapi/iqrf-gateway-webapp/schemas/passwordChange.json",
	"type": "object",
	"title": "Password change",
	"required": [
		"old",
		"new"
	],
	"properties": {
		"old": {
			"$id": "#/properties/old",
			"type": "string",
			"title": "Old password",
			"example": "old_passwd"
		},
		"new": {
			"$id": "#/properties/new",
			"type": "string",
			"title": "New password",
			"minLength": 15,
			"maxLength": 64,
			"pattern": "^[ -~]+$",
			"example": "8Yz#t>pL^sD|Uq&bW@"
		},
		"baseUrl": {
			"$id": "#/properties/baseUrl",
			"type": "string",
			"title": "Frontend base URL",
			"example": "https://iqaros.local/system/"
		}
	},
	"additionalProperties": false
}
