{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/iqrf-gateway-webapp-api/schemas/networkConnections.json",
	"type": "array",
	"title": "Network connections",
	"additionalItems": false,
	"items": {
		"$id": "#/items",
		"type": "object",
		"title": "Network connection",
		"example": {
			"type": "802-3-ethernet",
			"name": "Wired connection 1",
			"uuid": "c8fb6f29-ec85-4ff5-b1bb-1d1761196d16",
			"interfaceName": "eth0",
			"isActive": true,
			"state": "activated"
		},
		"additionalProperties": false,
		"required": [
			"name",
			"uuid",
			"type",
			"interfaceName"
		],
		"properties": {
			"name": {
				"$id": "#/items/properties/name",
				"type": "string",
				"title": "Connection name",
				"example": "Wired connection 1"
			},
			"uuid": {
				"$id": "#/items/properties/uuid",
				"type": "string",
				"title": "Connection UUID",
				"example": "c8fb6f29-ec85-4ff5-b1bb-1d1761196d16"
			},
			"type": {
				"$id": "#/items/properties/type",
				"type": "string",
				"enum": [
					"bluetooth",
					"bridge",
					"dummy",
					"802-3-ethernet",
					"gsm",
					"infiniband",
					"tun",
					"vlan",
					"vpn",
					"802-11-wireless",
					"wimax",
					"wireguard",
					"wpan"
				],
				"title": "Connection type",
				"example": "802-3-ethernet"
			},
			"interfaceName": {
				"$id": "#/items/properties/interfaceName",
				"oneOf": [
					{"type": "null"},
					{"type": "string"}
				],
				"title": "Network interface name",
				"example": "eth0"
			},
			"isActive": {
				"$id": "#/items/properties/isActive",
				"type": "boolean",
				"title": "Is the connection active?",
				"example": true
			},
			"state": {
				"$id": "#/items/properties/state",
				"type": "string",
				"enum": [
					"activated",
					"activating",
					"deactivating",
					"deactivated",
					"unknown"
				],
				"title": "Connection state",
				"example": "activated"
			},
			"bssids": {
				"$id": "#/items/properties/bssids",
				"type": "array",
				"title": "BSSIDs",
				"items": {
					"$id": "#/items/properties/bssids/items",
					"type": "string",
					"title": "BSSID",
					"example": "00:11:22:33:44:55"
				}
			}
		}
	}
}
