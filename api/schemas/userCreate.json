{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://apidocs.iqrf.org/openapi/iqrf-gateway-webapp/schemas/userCreate.json",
	"type": "object",
	"title": "User Creation",
	"additionalProperties": false,
	"required": [
		"username",
		"password",
		"language",
		"role"
	],
	"properties": {
		"baseUrl": {
			"$id": "#/properties/baseUrl",
			"type": "string",
			"title": "Frontend base URL",
			"example": "https://iqaros.local/system/"
		},
		"username": {
			"$id": "#/properties/username",
			"type": "string",
			"title": "Username",
			"minLength": 1,
			"example": "iqrf"
		},
		"email": {
			"$id": "#/properties/email",
			"oneOf": [
				{
					"type": "string",
					"format": "idn-email"
				},
				{
					"type": "null"
				}
			],
			"title": "Email",
			"example": "iqrf@example.org"
		},
		"password": {
			"$id": "#/properties/password",
			"type": "string",
			"title": "Password",
			"minLength": 15,
			"maxLength": 64,
			"pattern": "^[ -~]+$",
			"example": "8Yz#t>pL^sD|Uq&bW@"
		},
		"language": {
			"$id": "#/properties/language",
			"type": "string",
			"title": "Language",
			"enum": [
				"cs",
				"en"
			],
			"default": "en",
			"example": "en"
		},
		"role": {
			"$id": "#/properties/role",
			"type": "string",
			"title": "Role",
			"enum": [
				"admin",
				"normal",
				"basicadmin",
				"basic"
			],
			"default": "normal",
			"example": "normal"
		}
	}
}
